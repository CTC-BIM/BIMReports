<Window x:Class="BIMReports.Forms.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIMReports.Forms"
        mc:Ignorable="d"
        Title="Main" Height="250" Width="250" Foreground="#FFFBFBFB">
    <StackPanel>
        <Grid DockPanel.Dock="Top" Height="20" Margin="5">
            <TextBlock Text="Program Status" Width="Auto" Background="White" Foreground="Black"></TextBlock>
        </Grid>
        <Grid DockPanel.Dock="Left" Height="10" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <ProgressBar x:Name="processBar" VerticalAlignment="Stretch" Value="20" Height="5" Width="240"></ProgressBar>
        </Grid>
        <Grid DockPanel.Dock="Bottom" Height="Auto">
            <Label x:Name="lblStatus" Width="Auto" Foreground="Black" Content="Label" Margin="0,0,0,0" Background="#FFEAE8E8">
            </Label>
        </Grid>
        
    </StackPanel>
</Window>
